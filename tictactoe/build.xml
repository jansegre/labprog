<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/polycalc.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="polycalc.Application"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/polycalc.jar" fork="true"/>
    </target>

</project>
